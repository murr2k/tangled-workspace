# Tangled Stats Dashboard Configuration
# Copy this file to .env for local development.
# For production on fly.io, set PUBLISH_API_KEY as a secret:
#   fly secrets set PUBLISH_API_KEY=<your-key>

# ── Server ──
PORT=8080
FLASK_DEBUG=true

# ── Authentication ──
# API key that game clients must present to publish stats.
# Generate one with: python -c "import secrets; print(secrets.token_hex(32))"
PUBLISH_API_KEY=dev-key-change-me
